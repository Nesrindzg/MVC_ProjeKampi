@{
    ViewBag.Title = "Kategori - Blog Grafik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Kategoriye Göre Blog Dağılımı</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Charts -->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <style>
        #Piechart_div {
            margin: 40px auto;
            max-width: 900px;
            min-height: 500px;
        }

        h2 {
            text-align: center;
            margin-top: 30px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #2c3e50;
        }
    </style>

    <script>
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                dataType: "json",
                contentType: "application/json",
                url: '@Url.Action("BlogChart", "Chart")',
                success: function (result) {
                    google.charts.load('current', {
                        'packages': ['corechart']
                    });
                    google.charts.setOnLoadCallback(function () {
                        drawChart(result);
                    });
                }
            });
        });

        function drawChart(result) {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Kategori Adı');
            data.addColumn('number', 'Başlık Sayısı');

            var dataArray = [];
            $.each(result, function (i, obj) {
                dataArray.push([obj.CategoryName, obj.CategoryCount]);
            });
            data.addRows(dataArray);

            var pieChartOptions = {
                width: '100%',
                height: 500,
                pieHole: 0.4,
                chartArea: { width: '85%', height: '80%' },
                legend: {
                    position: 'right',
                    textStyle: { fontSize: 13 }
                },
                slices: {
                    0: { color: '#3498db' },
                    1: { color: '#e74c3c' },
                    2: { color: '#2ecc71' },
                    3: { color: '#9b59b6' },
                    4: { color: '#f1c40f' },
                    5: { color: '#1abc9c' },
                    6: { color: '#e67e22' },
                    7: { color: '#34495e' },
                    8: { color: '#7f8c8d' },
                    9: { color: '#d35400' }
                }
            };

            var chart = new google.visualization.PieChart(document.getElementById('Piechart_div'));
            chart.draw(data, pieChartOptions);
        }
    </script>
</head>
<body>
    <div class="container">
        <h2>Kategoriye Göre Blog Başlıkları</h2>
        <div id="Piechart_div"></div>
    </div>
</body>
</html>
