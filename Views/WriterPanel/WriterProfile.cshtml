@model EntityLayer.Concrate.Writer
@{
    ViewBag.Title = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Profil Bilgilerim</h2>

@using (Html.BeginForm("WriterProfile", "WriterPanel", FormMethod.Post))
{
    @Html.HiddenFor(m => m.WriterID)
    <div class="form-group">
        @Html.Label("Yazar Ünvan")
        @Html.TextBoxFor(m => m.WriterTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.WriterTitle, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(m => m.WriterName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.WriterName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(m => m.WriterSurname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.WriterSurname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Mail")
        @Html.TextBoxFor(m => m.WriterMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.WriterMail, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Şifresi")
        @Html.TextBoxFor(m => m.WriterPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.WriterPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Görsel Linki")
        @Html.TextBoxFor(m => m.WriterImage, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.WriterImage, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Hakkımda")
        @Html.TextBoxFor(m => m.WriterAbout, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.WriterAbout, "", new { @class = "text-danger" })
    </div>
    <button class="btn btn-outline-success">Bilgileri Güncelle</button>
}